from PyQt6.QtWidgets import QApplication, QWidget, QPushButton, QLabel
from PyQt6.QtGui import QIcon, QFont
import sys



class Window(QWidget):
    def __init__(self):
        super().__init__()
        self.setWindowTitle('LazyDictionary')
        self.setWindowIcon(QIcon('book.png'))
        self.setFixedHeight(100)
        self.setFixedWidth(300)
        self.button()

    def button(self):
        btn0 = QPushButton('Start', self)
        btn0.setGeometry(0, 30, 150, 70)
        btn0.setStyleSheet('background-color:green')
        btn0.setFont(QFont('san serif', 15))
        btn1 = QPushButton('Stop', self)
        btn1.setGeometry(150, 30, 150, 70)
        btn1.setStyleSheet('background-color:red')
        btn1.setFont(QFont('san serif', 15))

        btn0.clicked.connect(self.clickButton0)
        btn1.clicked.connect(self.clickButton1)

    def clickButton0(self):
        self.btn0.setGeometry(0, 10, 150, 70)
        self.btn0.setStyleSheet('background-color:grey')
        self.btn0.setFont(QFont('san serif', 15))

    def clickButton1(self):
        pass




app = QApplication(sys.argv)

window = Window()


window.show()
sys.exit(app.exec())
